@model WebGwenchana.ModelViews.ChangePasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Thay đổi mật khẩu</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/admisassets/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/admisassets/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/admisassets/css/style.css">
    <link rel="stylesheet" href="~/admisassets/css/components.css">
    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-94034622-3');
    </script>
    <!-- /END GA -->
</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="login-brand">
                            <img src="~/admisassets/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">
                        </div>

                        <div class="card card-primary">
                            <div class="card-header"><h4>Thay đổi mật khẩu</h4></div>

                            <div class="card-body">
                                <p class="text-muted">We will send a link to reset your password</p>
                                <form method="POST" asp-controller="Accounts" asp-action="ChangePassword">
                                    <div class="form-group">
                                        <label asp-for="PasswordNow">Mật khẩu hiện tại</label>
                                        <input asp-for="PasswordNow" type="pasword" class="form-control" tabindex="1" required autofocus>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Password">Mật khẩu mới</label>
                                        <input asp-for="Password" type="password" class="form-control pwstrength" data-indicator="pwindicator" tabindex="2" required>
                                        <div id="pwindicator" class="pwindicator">
                                            <div class="bar"></div>
                                            <div class="label"></div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" tabindex="2" required>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                            Lưu thay đổi
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="~/admisassets/modules/jquery.min.js"></script>
    <script src="~/admisassets/modules/popper.js"></script>
    <script src="~/admisassets/modules/tooltip.js"></script>
    <script src="~/admisassets/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/admisassets/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/admisassets/modules/moment.min.js"></script>
    <script src="~/admisassets/js/stisla.js"></script>

    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/admisassets/js/scripts.js"></script>
    <script src="~/admisassets/js/custom.js"></script>
</body>
</html>