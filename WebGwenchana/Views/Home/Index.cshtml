<!-- Product -->
<section class="sec-product bg0 p-t-100 p-b-50">
	<div class="container">
		<div class="p-b-32">
			<h3 class="ltext-105 cl5 txt-center respon1">
				Sản phẩm mới nhất
			</h3>
		</div>

		<!-- Tab01 -->
		<div class="tab01">
			<!-- Nav tabs -->
			<ul class="nav nav-tabs" role="tablist">
				<li class="nav-item p-b-10">
					<a class="nav-link active" data-toggle="tab" href="#all-items" role="tab">Tất cả sản phẩm</a>
				</li>	
				@if (Model.Products != null)
				{
					@foreach (var item in Model.Products) {
						<li class="nav-item p-b-10">
							<a class="nav-link" data-toggle="tab" href="#@item.category.CatID" role="tab">@item.category.CatName</a>
						</li>
					} 
				}
			</ul>

			<!-- Tab panes -->
			<div class="tab-content p-t-50">
				<!-- - -->
				<div class="tab-pane fade show active" id="all-items" role="tabpanel">
					<!-- Slide2 -->
					<div class="wrap-slick2">
						<div class="slick2">
							@await Html.PartialAsync("_ListProductPartialView.cshtml", allProduct)
						</div>
					</div>
				</div>
				@if (Model.Products != null)
				{
					@foreach (var item in Model.Products)
					{
						<div class="tab-pane fade" id="@item.category.CatID" role="tabpanel">
							<!-- Slide2 -->
							<div class="wrap-slick2">
								<div class="slick2">
									@await Html.PartialAsync("_ListProductPartialView.cshtml", item.lsProducts)
								</div>
							</div>
						</div>
					}
				}
			</div>
		</div>
	</div>
</section>


