@model WebGwenchana.ModelViews.MuaHangSuccessVM
@{
    ViewData["Title"] = "Mua hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<partial name="_Header2" />
<section class="bg0 p-t-75 p-b-120">
	<div class="container">
		<div class="row p-b-148">
			<div class="col-md-7 col-lg-8">
				<div class="p-t-7 p-r-85 p-r-15-lg p-r-0-md">
					<h3 class="mtext-111 cl2 p-b-16">
						CẢM ƠN BẠN ĐÃ MUA HÀNG CỦA CHÚNG TỚ
					</h3>
					<h4>Thông tin đơn hàng của bạn!</h4>
                    <form>
                        <div class="row">
                            <div class="col-12">
                                <div class="checkbox-form">
                                    <p>Mã đơn hàng: #@Model.DonHangID</p>
                                    <p>Cảm ơn bạn đã đặt hàng</p>
                                    <br />
                                    <h3>THÔNG TIN ĐƠN HÀNG</h3>
                                    <p>Thông tin giao hàng</p>
                                    <p>Người nhận hàng: @Model.FullName</p>
                                    <p>Số điện thoại: @Model.Phone</p>
                                    <p>Địa chỉ: @Model.Address</p>
                                    <br />
                                    Để xem chi tiết đơn hàng vui lòng truy cập vào <a asp-controller="Accounts" asp-action="Dashboard"><strong>Tài khoản cá nhân.</strong></a> Cần hỗ trợ? Liên hệ với chúng tôi qua số điện thoại 0965061800
                                </div>
                            </div>
                        </div>
                    </form>
				</div>
			</div>

			<div class="col-11 col-md-5 col-lg-4 m-lr-auto">
				<div class="how-bor1 ">
					<div class="hov-img0">
						<img src="https://images.unsplash.com/photo-1611652022419-a9419f74343d?q=80&w=1888&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="IMG">
					</div>
				</div>
			</div>
		</div>
	</div>
</section>