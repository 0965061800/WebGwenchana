@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebGwenchana.Models.Category>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Quản lý danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
    <div class="section-header">
        <h1>Quản lý danh mục</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></div>
            <div class="breadcrumb-item">Danh sách danh mục: page @ViewBag.CurrentPage</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Bảng các danh mục</h4>
                        <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Create" class="btn btn-primary">Tạo mới danh mục</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-md">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Description</th>
                                    <th>Order</th>
                                    <th>Action</th>
                                </tr>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CatID</td>
                                            <td>@item.CatName</td>
                                            <td>@item.Description</td>
                                            <td>@item.Order</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.CatID" class="btn btn-secondary">Detail</a>
                                                <a class="btn btn-warning" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CatID">Edit</a>
                                                <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.CatID" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </table>
                        </div>
                    </div>
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <pager class="page-container" list="@Model" asp-area="Admin" asp-controller="AdminCategories" asp-route-CatID="@ViewBag.CurrentCateID" asp-action="Index"></pager>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>