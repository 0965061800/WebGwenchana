@model WebGwenchana.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
    <div class="section-header">
        <h1>Chỉnh sửa danh mục</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></div>
            <div class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh sách  danh mục</a></div>
            <div class="breadcrumb-item">Chỉnh sửa danh mục</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-6">
                <div class="card">
                    <form class="card-body" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@Model.CatID" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CatID"/>
                        <input type="hidden" asp-for="Photo" />
                        <div class="form-group">
                            <label>Tên danh mục</label>
                            <input type="text" class="form-control" asp-for="CatName">
                        </div>
                        <div class="form-group">
                            <label>Mô tả danh mục</label>
                            <input type="text" class="form-control" asp-for="Description">
                        </div>
                        <div class="form-group">
                            <label for="ProductPhoto">Ảnh đại diện</label>
                            <input name="fThumb" type="file" class="" asp-for="Photo" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Order</label>
                            <input type="text" class="form-control" asp-for="Order">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-info">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


