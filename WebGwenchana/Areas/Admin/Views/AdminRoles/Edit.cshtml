@model WebGwenchana.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="section">
    <div class="section-header">
        <h1>Chỉnh sửa quyền truy cập</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></div>
            <div class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a></div>
            <div class="breadcrumb-item">Chỉnh sửa quyền truy cập @Model.RoleName</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Role ID: @Model.RoleID</h4>
                    </div>
                    <form class="card-body" asp-action="Edit" asp-route-id="@Model.RoleID" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RoleID"/>
                        <div class="form-group">
                            <label>Tên quyền truy cập</label>
                            <input type="text" class="form-control" asp-for="RoleName">
                        </div>
                        <div class="form-group">
                            <label>Mô tả quyền truy cập</label>
                            <input type="text" class="form-control" asp-for="Description">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-info">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

