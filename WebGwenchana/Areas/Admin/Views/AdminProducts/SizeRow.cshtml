@model WebGwenchana.Models.SizePrice
@{
    var id = ViewBag.Id;
    var productID = ViewBag.productID;
}
<div class="size-row">
    <div class="row gx-5">
        <input asp-for="ProductID" hidden name="sizePrices[@id].ProductID" value="@productID"/>
        <div class="form-group col-4">
            <label asp-for="Size">Loại Size</label>
            <select class="form-control select2" asp-items="ViewBag.Sizes" name="sizePrices[@id].SizeId" asp-for="SizeId">
                <option value="" disabled selected></option>
            </select>
        </div>
        <div class="form-group col-2">
            <label asp-for="ProductPrice">Giá sản phẩm </label>
            <input type="text" class="form-control" asp-for="ProductPrice" name="sizePrices[@id].ProductPrice" />
        </div>
    </div>
</div>